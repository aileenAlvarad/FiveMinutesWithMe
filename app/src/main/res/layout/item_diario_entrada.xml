<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Barra de color lateral -->
            <View
                android:id="@+id/viewColorAccent"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/primary" />

            <!-- Contenido principal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header con emoji y fecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvEmojiFlor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¸"
                        android:textSize="28sp"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvEmocionNombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feliz"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/quicksand_bold" />

                        <TextView
                            android:id="@+id/tvFechaHora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoy a las 14:30"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/quicksand_regular" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Texto del momento -->
                <TextView
                    android:id="@+id/tvMomento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hoy fue un dÃ­a especial, me sentÃ­ muy conectada conmigo misma..."
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/quicksand_regular"  />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>