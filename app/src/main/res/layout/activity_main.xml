<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background" >



    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Título de la app -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Minutos Conmigo"
            android:textSize="32sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/playfair_display"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Imagen decorativa central -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img_meditation"
            android:contentDescription="Ilustración de meditación"
            android:layout_marginBottom="32dp" />

        <!-- Texto motivacional -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu bienestar merece\n5 minutos de amor"
            android:textSize="18sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/quicksand_medium"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="40dp" />

        <!-- Botón principal -->
        <Button
            android:id="@+id/btnMomentoParaMi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiero un momento para mí"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/quicksand_bold"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:elevation="4dp"
            app:cornerRadius="24dp" />

    </LinearLayout>

    <!-- Menú inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp"
        android:paddingVertical="8dp">

        <ImageButton
            android:id="@+id/btnDiario"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_diary"
            android:contentDescription="Diario" />

        <ImageButton
            android:id="@+id/btnSonidos"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_sounds"
            android:contentDescription="Sonidos" />

        <ImageButton
            android:id="@+id/btnFavoritos"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_star"
            android:contentDescription="Favoritos"  />

        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_profile"
            android:contentDescription="Perfil"  />

    </LinearLayout>

</LinearLayout>