<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPatron"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icono del tipo de patr贸n -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tvIconoTipoPatron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="24sp"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- T铆tulo del patr贸n -->
            <TextView
                android:id="@+id/tvTituloPatron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consistencia"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginBottom="6dp" />

            <!-- Descripci贸n -->
            <TextView
                android:id="@+id/tvDescripcionPatron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has estado activa 5 de 7 d铆as (71%)"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/quicksand_regular"
                android:layout_marginBottom="8dp" />

            <!-- Barra de progreso -->
            <ProgressBar
                android:id="@+id/progressBarPatron"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:max="100"
                android:progress="71"
                android:progressDrawable="@drawable/progress_bar_custom"
                android:layout_marginBottom="8dp" />

            <!-- Recomendaci贸n -->
            <TextView
                android:id="@+id/tvRecomendacionPatron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="隆Excelente ritmo! Sigue as铆 "
                android:textSize="13sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/quicksand_medium"
                android:background="@drawable/recomendacion_background"
                android:padding="8dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>