<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/splash_background"
    android:padding="32dp"
    tools:context=".SplashActivity">

    <!-- Logo de la app -->
    <ImageView
        android:id="@+id/ivLogoSplash"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/app_logo_splash"
        android:contentDescription="Logo de 5 Minutos Conmigo"
        android:visibility="invisible"
        android:layout_marginBottom="32dp" />

    <!-- Nombre de la app -->
    <TextView
        android:id="@+id/tvAppNameSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 Minutos Conmigo"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:fontFamily="@font/playfair_display"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginBottom="16dp" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitleSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu espacio de bienestar y amor propio"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand_medium"
        android:alpha="0.9"
        android:visibility="invisible"
        android:textAlignment="center"
        android:layout_marginBottom="64dp" />

    <!-- Espaciador flexible -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Indicador de carga -->
    <TextView
        android:id="@+id/tvLoadingSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preparando tu momento especial... ✨"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand_regular"
        android:alpha="0.8"
        android:visibility="invisible"
        android:layout_marginBottom="32dp" />

</LinearLayout>