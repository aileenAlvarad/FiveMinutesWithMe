            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â¿CÃ³mo te encuentras en este momento?"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/quicksand_medium"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Selector de estado de Ã¡nimo -->
        <RadioGroup
            android:id="@+id/rgEstadoAnimoRapido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:id="@+id/rbRadiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ¨ Radiante y llena de energÃ­a"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/quicksand_medium"
                android:buttonTint="@color/emocion_feliz"
                android:padding="12dp"
                android:background="@drawable/radio_button_background"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/rbTranquila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ™ En calma y centrada"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/quicksand_medium"
                android:buttonTint="@color/emocion_tranquila"
                android:padding="12dp"
                android:background="@drawable/radio_button_background"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/rbNeutral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â˜ï¸ Neutral, ni bien ni mal"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/quicksand_medium"
                android:buttonTint="@color/emocion_neutral"
                android:padding="12dp"
                android:background="@drawable/radio_button_background"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/rbSensible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ§ï¸ Sensible y reflexiva"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/quicksand_medium"
                android:buttonTint="@color/emocion_triste"
                android:padding="12dp"
                android:background="@drawable/radio_button_background"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/rbAbrumada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒŠ Abrumada o ansiosa"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/quicksand_medium"
                android:buttonTint="@color/emocion_ansiosa"
                android:padding="12dp"
                android:background="@drawable/radio_button_background" />

        </RadioGroup>

        <!-- Notas rÃ¡pidas opcionales -->
