<?xml version="1.0" encoding="utf-8"?>
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context="DiarioActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header con tÃ­tulo y fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_header">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi Diario Emocional"
                    android:textSize="28sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/playfair_display"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="MiÃ©rcoles, 15 de Julio"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/quicksand_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Cada momento cuenta ðŸŒ¸"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/quicksand_regular"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- Formulario nueva entrada (inicialmente oculto) -->
            <LinearLayout
                android:id="@+id/layoutNuevaEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¿CÃ³mo te sientes hoy?"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_marginBottom="12dp" />

                <!-- Selector de emociones -->
                <RadioGroup
                    android:id="@+id/rgEmociones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbFeliz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¸"
                        android:textSize="24sp"
                        android:buttonTint="@color/emocion_feliz"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbTranquila"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ™"
                        android:textSize="24sp"
                        android:buttonTint="@color/emocion_tranquila"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbTriste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ§ï¸"
                        android:textSize="24sp"
                        android:buttonTint="@color/emocion_triste"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbAnsiosa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒŠ"
                        android:textSize="24sp"
                        android:buttonTint="@color/emocion_ansiosa"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbAgradecida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ¨"
                        android:textSize="24sp"
                        android:buttonTint="@color/emocion_agradecida"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbNeutral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜ï¸"
                        android:textSize="24sp"
                        android:buttonTint="@color/text_secondary"
                        android:padding="8dp"
                        android:checked="true" />

                </RadioGroup>

                <!-- Campo de texto -->
                <EditText
                    android:id="@+id/etMomento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CuÃ©ntame sobre tu momento..."
                    android:textColorHint="@color/text_secondary"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/quicksand_regular"
                    android:background="@drawable/edit_text_background"
                    android:padding="16dp"
                    android:minHeight="120dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:layout_marginBottom="16dp" />

                <!-- BotÃ³n guardar -->
                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar momento"
                    android:textAllCaps="false"
                    android:fontFamily="@font/quicksand_bold"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:padding="14dp" />

            </LinearLayout>

            <!-- Lista de entradas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDiario"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:paddingBottom="80dp"
                android:clipToPadding="false" />

            <!-- Mensaje cuando no hay entradas -->
            <TextView
                android:id="@+id/tvNoEntradas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AÃºn no has registrado ningÃºn momento\nÂ¡Empieza tu diario emocional hoy! ðŸ’•"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/quicksand_medium"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:visibility="gone" />

        </LinearLayout>

        <!-- FAB para nueva entrada -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNuevaEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/primary"
            app:tint="@color/white"
            app:fabSize="normal" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
