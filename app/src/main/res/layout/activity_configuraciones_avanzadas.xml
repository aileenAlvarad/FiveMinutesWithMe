        </LinearLayout>

        <!-- Privacidad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/white"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”’ Privacidad"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginBottom="16dp" />

            <!-- Analytics anÃ³nimos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analytics anÃ³nimos"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/quicksand_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayudar a mejorar la app (sin datos personales)"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/quicksand_regular" />

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAnalytics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/white"
                    app:trackTint="@color/primary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Zona peligrosa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/white"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš ï¸ Zona de riesgo"
                android:textSize="18sp"
                android:textColor="@color/error"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnRestablecerApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”„ Restablecer aplicaciÃ³n"
                android:textAllCaps="false"
                android:fontFamily="@font/quicksand_medium"
                android:backgroundTint="@color/error"
                android:textColor="@color/white"
