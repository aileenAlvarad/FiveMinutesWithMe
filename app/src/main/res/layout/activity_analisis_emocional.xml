<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".AnalisisEmocionalActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/gradient_header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š AnÃ¡lisis Emocional"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/playfair_display"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descubre tus patrones de bienestar"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/quicksand_medium" />

    </LinearLayout>

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutAnalisis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabSelectedTextColor="@color/primary"
        app:tabTextColor="@color/text_secondary"
        app:tabIndicatorColor="@color/primary"
        app:tabMode="fixed"
        android:elevation="2dp" />

    <!-- Contenido scrolleable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Resumen del perÃ­odo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/white"
                android:layout_margin="16dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tvResumenSemanal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargando anÃ¡lisis..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/quicksand_regular"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- Insight principal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/insight_background"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Insight Personal"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvInsightPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generando insight personalizado..."
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/quicksand_medium"
                    android:lineSpacingExtra="3dp" />

            </LinearLayout>

            <!-- Lista de patrones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Patrones Detectados"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPatrones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Mensaje cuando no hay datos -->
                <TextView
                    android:id="@+id/tvNoDataAnalisis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay suficientes datos para el anÃ¡lisis"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/quicksand_medium"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Espaciado inferior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>